<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vishalvdk.project0.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer"
        style="@style/UdacityButton"
        android:id="@+id/btn_streamer"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        style="@style/UdacityButton"
        android:id="@+id/btn_score"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_streamer"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        style="@style/UdacityButton"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_library"
        android:layout_below="@+id/btn_score"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        style="@style/UdacityButton"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_bigger"
        android:layout_below="@+id/btn_library"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader"
        style="@style/UdacityButton"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_reader"
        android:layout_below="@+id/btn_bigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:text="@string/capstone_my_own_app"
        style="@style/CapstoneButton"
        android:layout_marginTop="16dp"
        android:id="@+id/btn_capstone"
        android:layout_below="@+id/btn_reader"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
